{
  "manifest_version": 3,
  "name": "JabRef Simple Importer",
  "version": "1.0",
  "description": "現在のページの書誌情報をCitation.jsで取得し、JabRefに送信します。",
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ]
}